<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_testimonios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#249799"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="185dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nombreEgr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/nombre_egresado"
                    android:textAlignment="center"
                    android:textColor="#FFB2E3E4"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/carreraEgr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="@string/name_ingenieria"
                    android:textAlignment="center"
                    android:textColor="#a4000000"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/desTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingTop="5dp"
                    android:scrollbars="vertical"
                    android:text="@string/descripcion_instalaciones"
                    android:textAlignment="center"
                    android:textColor="@color/dark_grey"
                    android:textSize="16sp"/>
            </LinearLayout>

            <com.pkmmte.view.CircularImageView
                android:id="@+id/imagenTestimonio"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/preview"
                app:civ_border_color="#EEEEEE"
                app:civ_border_width="1dp"
                app:civ_shadow="true"
                app:civ_shadow_color="@color/colorPrimaryDark"
                app:civ_shadow_radius="10"
                android:layout_alignParentLeft="true"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>