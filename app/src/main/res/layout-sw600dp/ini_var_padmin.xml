<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/degradadosplash">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/card_image1"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            android:alpha="0.5"
            android:scaleType="fitCenter"
            android:src="@drawable/logotec"/>

        <TextView
            android:id="@+id/txtTituloTec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Instituto TecnolÃ³gico Superior de Felipe Carrillo Puerto"
            android:textColor="#fff"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/txtSubtituloTec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/subtituloEscuela"
            android:textColor="#9fb9b5b5"
            android:textSize="18sp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/btnContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="235dp"
        android:gravity="center">


        <Button
            android:id="@+id/btnReq1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/toggle_button_left"
            android:text="EXANI"

            android:textColor="#ffffff"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btnReq2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/toggle_button_right"
            android:text="Inscripcion"
            android:textColor="#ffffff"
            android:textSize="18sp"/>


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="300dp">


        <View
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/rounded_border_filled_header"/>

        <TextView
            android:id="@+id/card_text_descripcion_logros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignEnd="@+id/view1"
            android:layout_alignLeft="@+id/view1"
            android:layout_alignRight="@+id/view1"
            android:layout_alignStart="@+id/view1"
            android:layout_below="@+id/view1"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/rounded_border_filled_content"
            android:elevation="0dp"
            android:padding="10dp"
            android:paddingRight="20dp"
            android:paddingTop="11dp"
            android:textColor="@color/dark_grey"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:text="Requisitos"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"/>


    </RelativeLayout>


</RelativeLayout>
