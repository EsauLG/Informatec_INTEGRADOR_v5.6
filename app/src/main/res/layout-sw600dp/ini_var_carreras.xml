<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/degradadosplash"
             android:orientation="horizontal">

    <HorizontalScrollView
        android:layout_width="190dp"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnIngSistemas"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/isclogo"
                android:clickable="true"/>

            <ImageButton
                android:id="@+id/btnIngIndustrial"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:background="@drawable/iilogo"
                android:clickable="true"/>

            <ImageButton
                android:id="@+id/btnIngAlimen"
                android:layout_width="110dp"
                android:layout_height="130dp"
                android:layout_gravity="center_vertical|center"
                android:background="@drawable/iialogo"/>

            <ImageButton
                android:id="@+id/btnIngAdmin"
                android:layout_width="110dp"
                android:layout_height="130dp"
                android:layout_gravity="center_vertical|center"
                android:background="@drawable/ialogo"/>


            <ImageButton
                android:id="@+id/btnIngGestion"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center_vertical|center"
                android:background="@drawable/igelogo"/>

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity=""
            android:layout_marginLeft="200dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtMisionCarrera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="Carrera"
                android:textColor="#ffffff"
                android:textSize="20sp"/>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginRight="10dp">


            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/rounded_border_filled_header" />

            <TextView
                android:id="@+id/txtMision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1"
                android:background="@drawable/rounded_border_filled_content"
                android:elevation="0dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/dark_grey"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:text="MisiÃ³n"
                    android:textColor="#ffffff"
                    android:textSize="20sp"/>


            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="Semestre - "
                android:textColor="#fff"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/txtSemestreActual"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1"
                android:textColor="#fff"
                android:textSize="24sp"
                android:gravity="center_horizontal"/>


        </LinearLayout>


        <HorizontalScrollView
            android:layout_width="700dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="10dp"
            android:scrollbars="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center">


                <Button
                    android:id="@+id/btnSemestre1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical|center"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_states"
                    android:text="1"
                    android:textColor="#fff"
                    android:textSize="18sp"/>

                <Button
                    android:id="@+id/btnSemestre2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical|center"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_states"
                    android:text="2"
                    android:textColor="#fff"
                    android:textSize="18sp"/>

                <Button
                    android:id="@+id/btnSemestre3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical|center"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_states"
                    android:text="3"
                    android:textColor="#fff"
                    android:textSize="18sp"/>

                <Button
                    android:id="@+id/btnSemestre4"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical|center"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_states"
                    android:text="4"
                    android:textColor="#fff"
                    android:textSize="18sp"/>

                <Button
                    android:id="@+id/btnSemestre5"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical|center"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_states"
                    android:text="5"
                    android:textColor="#fff"
                    android:textSize="18sp"/>

                <Button
                    android:id="@+id/btnSemestre6"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical|center"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_states"
                    android:text="6"
                    android:textColor="#fff"
                    android:textSize="18sp"/>

                <Button
                    android:id="@+id/btnSemestre7"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical|center"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_states"
                    android:text="7"
                    android:textColor="#fff"
                    android:textSize="18sp"/>

                <Button
                    android:id="@+id/btnSemestre8"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical|center"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_states"
                    android:text="8"
                    android:textColor="#fff"
                    android:textSize="18sp"/>

                <Button
                    android:id="@+id/btnSemestre9"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical|center"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_states"
                    android:text="9"
                    android:textColor="#fff"
                    android:textSize="18sp"/>


            </LinearLayout>


        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="200dp">

            <TextView
                android:id="@+id/txtSemestres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_border_white_title"
                android:textSize="16sp"/>


        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--Botones Carreras Tec-->


    </LinearLayout>


</FrameLayout>