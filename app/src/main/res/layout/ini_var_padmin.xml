<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradadosplash">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/card_image1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:alpha="0.5"
            android:scaleType="fitCenter"
            android:src="@drawable/logotec" />

        <TextView
            android:id="@+id/txtTituloTec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Instituto TecnolÃ³gico Superior de Felipe Carrillo Puerto"
            android:textColor="#fff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtSubtituloTec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/subtituloEscuela"
            android:textColor="#9fb9b5b5"
            android:textSize="12sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/btnContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:gravity="center">


        <Button
            android:id="@+id/btnReq1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/toggle_button_left"
            android:text="EXANI"

            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnReq2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/toggle_button_right"
            android:text="Inscripcion"
            android:textColor="#ffffff" />


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnContainer"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp">


        <View
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/rounded_border_filled_header" />

        <TextView
            android:id="@+id/card_text_descripcion_logros"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_alignEnd="@+id/view1"
            android:layout_alignLeft="@+id/view1"
            android:layout_alignRight="@+id/view1"
            android:layout_alignStart="@+id/view1"
            android:layout_below="@+id/view1"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/rounded_border_filled_content"
            android:elevation="0dp"
            android:padding="10dp"
            android:paddingTop="11dp"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/article_subheading1" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:text="Requisitos"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="@dimen/article_subheading"
            android:textStyle="bold" />


    </RelativeLayout>


</RelativeLayout>
