<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="4dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/card_image_logros"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_image_height"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/card_title_logros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/card_image_logros"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#50000000"
            android:gravity="center"
            android:text="Titulo de la instalacion"
            android:textColor="@color/white"
            android:textSize="@dimen/article_subheading"/>

        <TextView
            android:id="@+id/card_text_descripcion_logros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_title_logros"
            android:layout_margin="12dp"
            android:text="Descripcion de la instalacion"
            android:textColor="@color/dark_grey"
            android:textSize="14sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>